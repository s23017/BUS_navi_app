rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users コレクション
    match /Users/{userId} {
      // 自分のドキュメントのみ読み書き可能
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 新規作成時の検証
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['uid', 'username', 'email', 'createdAt'])
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.email == request.auth.token.email;
    }
    
    // バス乗客位置情報の読み書き許可
    match /busRiderLocations/{document} {
      // 読み取りは誰でも可能（同じバスの乗客情報を共有するため）
      allow read: if true;
      // 書き込みは認証済みユーザーのみ（不正なデータ投稿を防ぐ）
      allow write: if request.auth != null;
    }
    
    // バス停通過情報の読み書き許可
    match /busStopPassages/{document} {
      // 読み取りは誰でも可能（バス停通過情報を共有するため）
      allow read: if true;
      // 書き込みは認証済みユーザーのみ（不正なデータ投稿を防ぐ）
      allow write: if request.auth != null;
    }

    // ユーザーポイント・ランキング情報
    match /userStats/{userId} {
      // ランキング表示のため読み取りは誰でも可能
      allow read: if true;
      // 書き込みは本人のみ
      allow write: if request.auth != null && request.auth.uid == userId;

      // ガチャ履歴サブコレクション
      match /gachaRolls/{rollId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
